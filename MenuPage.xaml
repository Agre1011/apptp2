<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TPMauiLoginApp.MenuPage"
             Title="Menú">

    <Grid>
        <!-- Fondo -->
        <Image Source="fondo.png"
               Aspect="Fill"
               Opacity="0.5" />

        <ScrollView>
            <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

                <!-- Logo -->
                <Image Source="logo.png"
                       HeightRequest="120"
                       HorizontalOptions="Center" />

                <!-- Acerca del desarrollador -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Button Text="ACERCA DEL DESARROLLADOR"
                            Clicked="OnAcercaClicked"
                            BackgroundColor="#D3D3D3"
                            TextColor="Black"
                            CornerRadius="20"
                            HeightRequest="45" />
                    <Image Source="info.svg"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Noticias / Servicio -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Button Text="NOTICIAS"
                            Clicked="OnServicioClicked"
                            BackgroundColor="#D3D3D3"
                            TextColor="Black"
                            CornerRadius="20"
                            HeightRequest="45" />
                    <Image Source="sport.svg"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Cerrar sesión -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Button Text="CERRAR SESIÓN"
                            Clicked="OnCerrarSesionClicked"
                            BackgroundColor="#D3D3D3"
                            TextColor="Black"
                            CornerRadius="20"
                            HeightRequest="45" />
                    <Image Source="close.svg"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
