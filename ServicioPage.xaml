<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             x:Class="TPMauiLoginApp.ServicioPage"
             Title="Noticias">

    <Grid>
        <!-- Fondo -->
        <Image Source="fondo.png"
               Aspect="Fill"
               Opacity="0.5" />

        <ScrollView>
            <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

                <!-- Logo -->
                <Image Source="logo.png"
                       HeightRequest="100"
                       HorizontalOptions="Center" />

                <!-- Noticia 1 -->
                <Label Text="TITULO" TextColor="Black" FontAttributes="Bold" />
                <Frame BackgroundColor="#D3D3D3" CornerRadius="10">
                    <Label Text="NOTICIA 1"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <!-- Noticia 2 -->
                <Label Text="TITULO" TextColor="Black" FontAttributes="Bold" />
                <Frame BackgroundColor="#D3D3D3" CornerRadius="10">
                    <Label Text="NOTICIA 2"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <!-- Noticia 3 -->
                <Label Text="TITULO" TextColor="Black" FontAttributes="Bold" />
                <Frame BackgroundColor="#D3D3D3" CornerRadius="10">
                    <Label Text="NOTICIA 3"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <!-- Noticia 4 -->
                <Label Text="TITULO" TextColor="Black" FontAttributes="Bold" />
                <Frame BackgroundColor="#D3D3D3" CornerRadius="10">
                    <Label Text="NOTICIA 4"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <!-- Noticia 5 -->
                <Label Text="TITULO" TextColor="Black" FontAttributes="Bold" />
                <Frame BackgroundColor="#D3D3D3" CornerRadius="10">
                    <Label Text="NOTICIA 5"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <!-- Icono home -->
                <Image Source="home.svg"
                       HeightRequest="30"
                       WidthRequest="30"
                       HorizontalOptions="Center"
                       Margin="0,20,0,0">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnVolverClicked" />
                    </Image.GestureRecognizers>
                </Image>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
